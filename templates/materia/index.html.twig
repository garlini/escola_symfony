{% extends 'base.html.twig' %}

{% block body %}
    
    <div class="row mb-2 mt-2" style="padding: 20px;">
    <div class="col-lg-12">
        <h3 class="one text-center">Matérias</h3>
        <a class="btn btn-primary float-right" href="{{ path('materias_create') }}">Novo</a>
    </div>
</div>
    
    
<table class="table" style="padding: 20px;">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">Professor Principal</th>
      <th scope="col">Professor Substituto</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
      {% for materia in materias %}
        <tr>
          <th scope="row">{{ materia.id }}</th>
          <td>{{ materia.nome }}</td>
          <td>{{ materia.professorPrincipal ? materia.professorPrincipal.nome : '' }}</td>
          <td>{{ materia.professorSubstituto ? materia.professorSubstituto.nome : '' }}</td>
          <td><a href="{{ path('materias_update', {id: materia.id}) }}">editar</a></td>
        </tr>
    {% else %}
        <tr>
            <td colspan="2" class="text-center">Nenhuma matéria entrada.</td>
        </tr>
    {% endfor  %}
  </tbody>
</table>
{% endblock %}